<br>
<%- if controller_name != 'sessions' %>
  <%# link_to "Sign in", new_session_path(resource_name) %>
  <button type="button" class="btn btn-default" onClick="window.location.href='/users/sign_in'">
  Sign in
  </button>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%# link_to "Sign up", new_registration_path(resource_name) %>
  <button type="button" class="btn btn-default" onClick="window.location.href='/users/sign_up'">
  Sign up
  </button>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%# link_to "Forgot your password?", new_password_path(resource_name) %>
  <button type="button" class="btn btn-default" onClick="window.location.href='/users/password/new'">
  Forgot your password?
  </button>
<% end -%>

<div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      Instructions
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li><a href="/users/confirmation/new" onclick="window.location.href='/users/confirmation/new'">Didn't receive confirmation instructions?</a></li>
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li><a href="/users/unlock/new"onClick="window.location.href='/users/unlock/new'">Didn't receive unlock instructions?</a></li>
      <% end -%>
    </ul>
</div>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>
