<p id="notice"><%= notice %></p>

<% if @post.content? %>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<%end%>

<% if @post.avatar? %>
<p>
  <strong>Attachment:</strong><br>
  <%= image_tag @post.avatar.url(:medium) %>
</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
